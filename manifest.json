{
    "manifest_version": 3,
    "name": "Tab Time Tracker",
    "version": "1.0",
    "description": "Tracks the time spent on each tab",
    "permissions": ["tabs", "storage"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "icon.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "mainMenu.html",
                "sessionsTracker.html",
                "tabTracker.html",
                "tabTracker.js",
                "tabTracker.css",
                "sessionsTracker.js",
                "sessionsTracker.css",
                "mainMenu.js",
                "mainMenu.css"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}
